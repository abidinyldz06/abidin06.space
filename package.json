{
  "name": "abidin-space-personal-assistant",
  "version": "1.0.0",
  "description": "Modern personal assistant website for abidin.space",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "jest --selectProjects=\"Backend Tests\"",
    "test:frontend": "jest --selectProjects=\"Frontend Tests\"",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o public/css/style.min.css public/css/style.css",
    "minify-js": "uglifyjs public/js/app.js -o public/js/app.min.js",
    "lint": "echo 'Linting would go here'",
    "pretest": "echo 'Pre-test setup complete'"
  },
  "keywords": ["personal-assistant", "web-app", "modern-ui"],
  "author": "Abidin",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-session": "^1.17.3",
    "compression": "^1.7.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4"
  }
}